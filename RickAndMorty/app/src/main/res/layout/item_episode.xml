<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StyleCardItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/card_padding">

        <TextView
            android:id="@+id/item_text_episode_name"
            style="@style/StyleCardText"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="The Ricklantis Mixup" />

        <TextView
            android:id="@+id/item_text_date"
            style="@style/StyleCardText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_text_episode_name"
            tools:text="September 10, 2017" />

        <TextView
            android:id="@+id/item_text_title_season"
            style="@style/StyleCardText"
            android:text="@string/text_season"
            android:textColor="@color/pink_500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_text_date" />

        <TextView
            android:id="@+id/item_text_season"
            style="@style/StyleCardText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/item_text_title_season"
            app:layout_constraintTop_toTopOf="@+id/item_text_title_season"
            tools:text="03" />

        <TextView
            android:id="@+id/item_text_title_episode_num"
            style="@style/StyleCardText"
            android:text="@string/text_episode"
            android:textColor="@color/pink_500"
            app:layout_constraintStart_toStartOf="@+id/item_text_title_season"
            app:layout_constraintTop_toBottomOf="@+id/item_text_title_season" />

        <TextView
            android:id="@+id/item_text_episode_num"
            style="@style/StyleCardText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/item_text_title_episode_num"
            app:layout_constraintTop_toTopOf="@+id/item_text_title_episode_num"
            tools:text="07" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>